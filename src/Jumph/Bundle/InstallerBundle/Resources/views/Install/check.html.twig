{% extends '::base_install.html.twig' %}

{% block title %}
    {{ parent() }} | Installer
{% endblock %}

{% block headerContent %}
    <h1>
        Installer
        <small>Check</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-wrench"></i> Installer</li>
        <li>Check</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-solid bg-green">
                <div class="box-header">
                    <h3 class="box-title">PHP Version 5.3.*</h3>
                </div>
                <div class="box-body">
                    <p>
                        You have PHP version 5.5.15 installed!
                    </p>
                </div>
            </div>

            <div class="box box-solid bg-red">
                <div class="box-header">
                    <h3 class="box-title">Mcrypt library</h3>
                </div>
                <div class="box-body">
                    <p>
                        You seem to be missing the Mcrypt libary!
                    </p>
                </div>
            </div>

            <div class="box box-solid bg-orange">
                <div class="box-header">
                    <h3 class="box-title">No cache installed</h3>
                </div>
                <div class="box-body">
                    <p>
                        Although it's not necessary, it's recommended to have opcache installed!
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
